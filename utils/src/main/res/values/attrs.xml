<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="zbutton">
        <!-- Text on center -->
        <attr name="text_center" format="string"></attr>
        <attr name="textcolor" format="color"></attr>
        <attr name="textcolor_choose" format="color"></attr>
        <attr name="textcolor_disable" format="color"></attr>
        <attr name="textcolor_click" format="color"></attr>
        <!-- Textsize of text on center-->
        <attr name="textsize" format="dimension"></attr>
        <!-- Text on left -->
        <attr name="text_left" format="string"></attr>
        <attr name="textsize_left" format="dimension"></attr>
        <attr name="textcolor_left" format="color"></attr>
        <attr name="textcolor_left_choose" format="color"></attr>
        <attr name="textcolor_left_click" format="color"></attr>
        <attr name="textcolor_left_disable" format="color"></attr>
        <!-- Text on right -->
        <attr name="text_right" format="string"></attr>
        <attr name="textsize_right" format="dimension"></attr>
        <attr name="textcolor_right" format="color"></attr>
        <attr name="textcolor_right_choose" format="color"></attr>
        <attr name="textcolor_right_click" format="color"></attr>
        <attr name="textcolor_right_disable" format="color"></attr>
        <!-- Small Text -->
        <attr name="text_center_small" format="string"></attr>
        <attr name="textsize_small" format="dimension"></attr>
        <attr name="textcolor_small" format="color"></attr>
        <attr name="textcolor_small_choose" format="color"></attr>
        <attr name="textcolor_small_click" format="color"></attr>
        <attr name="textcolor_small_disable" format="color"></attr>

        <!-- Width between text of center and small text-->
        <attr name="w_space_text" format="dimension"></attr>
        <!-- Width between text of center and bitmap on center-->
        <attr name="w_space" format="dimension"></attr>

        <!-- Percent of Bitmap on center -->
        <attr name="percent_bitmap_center" format="float"></attr>
        <!-- Percent of Bitmap on left -->
        <attr name="percent_bitmap_left" format="float"></attr>
        <!-- Percent of Bitmap on right -->
        <attr name="percent_bitmap_right" format="float"></attr>
        <!-- Percent of Bitmap on back -->
        <attr name="percent_back" format="float"></attr>

        <!--Orientation of text and bitmap-->
        <attr name="orientation" format="string">horizontal|vertical</attr>

        <attr name="color_back" format="color"></attr>
        <attr name="color_back_disable" format="color"></attr>
        <attr name="color_back_choose" format="color"></attr>
        <attr name="color_back_click" format="color"></attr>
        <attr name="color_border_bitmap_center" format="color"></attr>
        <attr name="color_border" format="color"></attr>
        <attr name="color_border_choose" format="color"></attr>
        <attr name="color_border_click" format="color"></attr>

        <!-- Bitmaps -->
        <attr name="img_center" format="reference"></attr>
        <attr name="img_center_choose" format="reference"></attr>
        <attr name="img_center_disable" format="reference"></attr>
        <attr name="img_center_click" format="reference"></attr>
        <attr name="img_back" format="reference"></attr>
        <attr name="img_back_choose" format="reference"></attr>
        <attr name="img_back_disable" format="reference"></attr>
        <attr name="img_back_click" format="reference"></attr>
        <attr name="img_left" format="reference"></attr>
        <attr name="img_right" format="reference"></attr>

        <!-- Gravity of bitmap on center -->
        <attr name="gravity_img_center" format="string"></attr>

        <attr name="style_img_back" format="string"></attr>

        <!-- Radius of all corners -->
        <attr name="radius" format="dimension"></attr>

        <!-- Width of borders -->
        <attr name="w_border" format="dimension"></attr>

        <!-- Borders of bitmap and text-->
        <attr name="drawtextborder" format="boolean">false</attr>
        <attr name="drawimgborder_center" format="boolean">false</attr>
        <attr name="color_text_border" format="color"></attr>

        <!-- If you need draw a round shape bitmap-->
        <attr name="drawcircleimg" format="boolean">false</attr>
        <attr name="color_circle_border" format="color"></attr>

        <attr name="isSpinner" format="boolean">false</attr>

        <!-- Corners -->
        <attr name="radius_lefttop" format="dimension">0</attr>
        <attr name="radius_righttop" format="dimension">0</attr>
        <attr name="radius_leftbottom" format="dimension">0</attr>
        <attr name="radius_rightbottom" format="dimension">0</attr>

        <!-- Is backgroundcolor autochange and state of button will changed at the moment-->
        <attr name="isautochange" format="boolean">false</attr>

        <!--show wave-->
        <attr name="wave" format="boolean">false</attr>
        <attr name="wavecolor" format="color">#66ccff</attr>
        <attr name="wavecolor_click" format="color">#66ccff</attr>
        <attr name="wavecolor_choose" format="color">#66ccff</attr>
        <attr name="wavecolor_disable" format="color">#66ccff</attr>
    </declare-styleable>
</resources>
